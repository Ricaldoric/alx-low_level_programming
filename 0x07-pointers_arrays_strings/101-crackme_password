#include <stdio.h>
#include <string.h>

/* Function to check if the password is correct */
int check_password(const char *password) {
    /* This is a dummy password check function.
       In a real scenario, you would replace this with the actual password check. */
    return strcmp(password, "abc") == 0;
}

/* Function to recursively generate all possible combinations of characters */
void generate_password(char *password, int index, int max_length) {
    char charset[] = "abcdefghijklmnopqrstuvwxyz";
    if (index == max_length) {
        password[index] = '\0';
        if (check_password(password)) {
            printf("Password found: %s\n", password);
        }
        return;
    }
    for (int i = 0; charset[i] != '\0'; ++i) {
        password[index] = charset[i];
        generate_password(password, index + 1, max_length);
    }
}

int main(void) {
    const int max_length = 3;  /* Maximum length of the password */
    char password[max_length + 1];

    generate_password(password, 0, max_length);
    return 0;
}

